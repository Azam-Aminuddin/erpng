select_terms, frm.doc, function (r) {\n\t\t\tif (!r.exc) {\n\t\t\t\tfrm.set_value(\"terms\", r.message);\n\t\t\t}\n\t\t});\n\t},\n\n\trefresh: function (frm) {\n\t\tif ((!frm.doc.__islocal) && (frm.doc.status == 'Accepted') && (frm.doc.docstatus === 1)) {\n\t\t\tfrm.add_custom_button(__('Make Employee'),\n\t\t\t\tfunction () {\n\t\t\t\t\terpnext.offer_letter.make_employee(frm)\n\t\t\t\t}\n\t\t\t);\n\t\t}\n\t}\n\n});\n\nerpnext.offer_letter.make_employee = function (frm) {\n\tfrappe.model.open_mapped_doc({\n\t\tmethod: \"erpnext.hr.doctype.offer_letter.offer_letter.make_employee\",\n\t\tfrm: frm\n\t});\n};\n","__tree_js":null,"docstatus":0,"sort_field":"modified","__messages":null,"allow_copy":0,"allow_guest_to_view":0,"istable":0,"has_web_view":0,"__map_js":null,"__css":null,"show_name_in_global_search":1,"beta":0,"read_only_onload":0,"module":"HR","doctype":"DocType","autoname":"Offer-.#####","__kanban_boards":[],"issingle":0,"__listview_template":null,"name":"Offer Letter","idx":0,"default_print_format":"Offer Letter","hide_toolbar":0,"__workflow_docs":[],"title_field":"applicant_name","modified":"2017-02-17 16:52:59.334325","is_submittable":1,"name_case":"","__calendar_js":null,"permissions":[{"creation":"2015-03-04 14:20:17.662207","share":1,"doctype":"DocPerm","owner":"Administrator","export":1,"cancel":1,"set_user_permissions":0,"modified_by":"Administrator","create":1,"submit":1,"write":1,"role":"HR User","print":1,"docstatus":0,"permlevel":0,"parent":"Offer Letter","read":1,"import":1,"report":1,"apply_user_permissions":0,"name":"3bf57bfda1","idx":1,"amend":1,"modified":"2017-06-09 23:51:56.725120","email":1,"parenttype":"DocType","parentfield":"permissions","if_owner":0,"delete":1}],"quick_entry":0,"__custom_js":"","__print_formats":[{"creation":"2015-03-05 14:34:26.751210","module":null,"doctype":"Print Format","disabled":0,"custom_format":1,"owner":"Administrator","font":null,"modified_by":"Administrator","_comments":null,"html":"{% set terms_exist = doc.terms and (doc.terms|striptags).strip() or \"\" %}\n\n{% if letter_head and not no_letterhead -%}\n    <div class=\"letter-head\">{{ letter_head }}</div>\n    <hr>\n{%- endif %}\n\n<div {% if terms_exist -%} class=\"page-break\" {%- endif %}>\n<p>\n\n<!-- offer letter content starts here, <br> is used to create new lines -->\nDate: {{ doc.offer_date }}\n<br><br>\n\nDear {{ doc.applicant_name }}, \n\n<br><br>\n\nWe are pleased to appoint you in the services of {{ doc.company }} on the terms and conditions detailed in this letter.\n\n<br><br>\n\nYour designation shall be <b>{{ doc.designation }}</b>.\n\n<br><br>\n\n<!-- offer letter terms and description from the table -->\n\n{%- if doc.offer_terms -%}\n    {%- for row in doc.offer_terms -%}\n        <b>{{ row.offer_term }}:</b> {{ row.value }}\n\n        <br>\n    {%- endfor -%}\n{%- endif -%}\n\n<br>\n\n<!-- offer letter content continues -->\n\n\nPlease read the detailed terms as below. If you have any queries, feel free to get in touch with us.\nWe look forward to your long and fruitful career association with our organisation.\nIf you decide to join us, 'Welcome to {{ doc.company }} !'\n\n<br><br>\n\n<p class=\"strong\">\n\nYours truly,\n\n<br><br><br><br>\n\nAuthorized Signatory\n\n<br>\n\n{{ doc.company }}\n\n<!-- offer letter content ends here -->\n\n</p>\n</div>\n\n<!-- offer letter terms and conditions -->\n{% if terms_exist %}\n<div> {{ doc.terms }} </div>\n{% endif %}","docstatus":0,"show_section_headings":0,"_liked_by":null,"parent":null,"_assign":null,"print_format_builder":0,"standard":"Yes","align_labels_right":0,"_user_tags":null,"print_format_type":"Server","format_data":null,"doc_type":"Offer Letter","name":"Offer Letter","idx":0,"line_breaks":0,"modified":"2015-12-04 11:46:28.897657","align_labels_left":0,"parenttype":null,"css":null,"parentfield":null}]},{"fields":[{"collapsible":0,"no_copy":0,"creation":"2015-03-05 12:53:45.342292","search_fields":null,"doctype":"DocField","owner":"Administrator"